{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@": ["./src"],
      "@/*": ["./src/*"],
      "@components": ["./src/components/index"],
      "@components/*": ["./src/components/*"],
      "@types": ["./src/types/index"],
      "@types/*": ["./src/types/*"],
      "@utils": ["./src/utils/index"],
      "@utils/*": ["./src/utils/*"],
    }
  }
}
